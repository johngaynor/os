generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id                    String  @id @default(cuid())
  userId                String  @db.VarChar(55)
  name                  String  @db.VarChar(55)
  origin                String? @db.Text
  relationshipType      String  @db.Text @map("relationship_type")
  relationshipStrength  Int     @map("relationship_strength")
  occupation            String? @db.Text
  context               String? @db.Text
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  // Relations
  interactions          Interaction[]

  @@map("persons")
}

model Interaction {
  id                    String    @id @default(cuid())
  personId              String    @map("person_id")
  title                 String    @db.VarChar(255)
  latitude              Float?
  longitude             Float?
  placeName             String?   @db.Text @map("place_name")
  interactionTime       DateTime? @map("interaction_time")
  notes                 Json?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  // Relations
  person                Person    @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@map("interactions")
}
